{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": [
                "./*"
            ],
            "@repo/ui": [
                "../../packages/ui/src"
            ],
            "@repo/lib": [
                "../../packages/lib/src"
            ],
            "@repo/types": [
                "../../packages/types/src"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}