{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@repo/ui": [
                "./packages/ui/src"
            ],
            "@repo/ui/*": [
                "./packages/ui/src/*"
            ],
            "@repo/lib": [
                "./packages/lib/src"
            ],
            "@repo/lib/*": [
                "./packages/lib/src/*"
            ],
            "@repo/types": [
                "./packages/types/src"
            ],
            "@repo/types/*": [
                "./packages/types/src/*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}